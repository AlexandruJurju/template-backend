{
  "timeout": 30000,
  "retries": 2,
  "use": {
    "headless": true,
    "viewport": { "width": 1280, "height": 720 },
    "ignoreHTTPSErrors": true,
    "trace": "retain-on-failure",
    "screenshot": "only-on-failure"
  },
  "projects": [
    {
      "name": "chromium",
      "use": { "browserName": "chromium" }
    },
    {
      "name": "firefox",
      "use": { "browserName": "firefox" }
    }
  ],
  "reporter": [["html"], ["junit", { "outputFile": "test-results.xml" }]]
}